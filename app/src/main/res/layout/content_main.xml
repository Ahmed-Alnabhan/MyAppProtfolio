<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elearnna.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="1"
    android:background="@color/appBGColor">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/portfolio_title"
            android:id="@+id/portfolioTitle"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_gravity="center_horizontal"
            android:typeface="normal"
            android:textColor="@color/appTitleColor"
            android:textIsSelectable="false"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".68"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.45">
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.10">
        <Button
            style="@style/AllProjectsButtons.ProjectsButtons"
            android:text="@string/btnSpotify"
            android:id="@+id/spotifyReaderAppButton"
            android:tag="Spotify Streamer"
            android:onClick="launchAProgect"/>

        <Button
            style="@style/AllProjectsButtons.ProjectsButtons"
            android:text="@string/btnScore"
            android:id="@+id/scoreAppButton"
            android:tag="Football Score"
            android:onClick="launchAProgect"/>

        <Button
            style="@style/AllProjectsButtons.ProjectsButtons"
            android:text="@string/btnLibrary"
            android:id="@+id/libraryAppButton"
            android:tag="Library"
            android:onClick="launchAProgect" />

        <Button
            style="@style/AllProjectsButtons.ProjectsButtons"
            android:text="@string/btnBuildIt"
            android:id="@+id/buildItAppButton"
            android:tag="Build It Bigger"
            android:onClick="launchAProgect"/>

        <Button
            style="@style/AllProjectsButtons.ProjectsButtons"
            android:text="@string/btnBacon"
            android:id="@+id/xyzAppButton"
            android:tag="XYZ Reader"
            android:onClick="launchAProgect" />

        <Button
            style="@style/AllProjectsButtons.CapstoneButtons"
            android:text="@string/btnCapstone"
            android:id="@+id/capstoneButton"
            android:tag="Own Capstone"
            android:onClick="launchAProgect" />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.45">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
